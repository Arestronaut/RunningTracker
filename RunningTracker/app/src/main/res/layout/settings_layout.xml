<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/desired_speed_title"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="@string/desired_speed_header" />

    <TextView
        android:id="@+id/desired_speed_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <SeekBar
        android:id="@+id/desired_speed_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:max="100"
        android:progress="50"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tolerance_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="@string/tolerance_header" />

    <TextView
        android:id="@+id/tolerance_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <SeekBar
        android:id="@+id/tolerance_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:max="100"
        android:progress="50"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <CheckBox
        android:id="@+id/local_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_checkbox" />

</LinearLayout>